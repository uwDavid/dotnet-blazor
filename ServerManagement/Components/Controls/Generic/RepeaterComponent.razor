@typeparam TItem
@* 1 - define generic type for the repeater *@

@Header
@if (Items != null && Items.Count > 0 && Row != null)
{
    <Virtualize Items="this.Items" Context="item">
    @Row(item)
    @* 3 - (item) indicates the data we are feeding the Render Fragment *@
</Virtualize>
}
@Footer

@code {
    // 2 - provide data as parameter
    [Parameter]
    public List<TItem>? Items { get; set; }

    // 3 - feed data to template
    // this RenderFragment will take a type of data (TItem)
    [Parameter]
    public RenderFragment<TItem>? Row { get; set; }

    [Parameter]
    public RenderFragment? Header { get; set; }

    [Parameter]
    public RenderFragment? Footer { get; set; }

}